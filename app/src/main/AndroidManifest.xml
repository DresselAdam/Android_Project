<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.game_guide">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity
                android:name=".FighterzList"
                android:label="@string/title_activity_fighterz_list"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.game_guide.MainActivity"/>
        </activity>
        <activity
                android:name=".TermsActivity"
                android:label="@string/glossary_label"
                android:parentActivityName=".MainActivity">
        </activity>
        <activity
                android:name=".CharacterActivity"
                android:label="@string/character_lab"
                android:parentActivityName=".MainActivity">
        </activity>
        <activity
                android:name=".OverviewActivity"
                android:label="@string/overview_lab"
                android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>